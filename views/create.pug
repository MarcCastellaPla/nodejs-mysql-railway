doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Create User
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
  
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow-lg
            .card-header.bg-primary.text-white.text-center
              h2 Create New User
            .card-body
              form(action="/create" method="POST")
                .mb-3
                  label.form-label(for="userName") Your Name
                  input#userName.form-control(type="text" name="name" placeholder="Enter your name" required)
                .d-grid
                  button.btn.btn-primary(type="submit") Create User
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
